<odoo>
    <record id="contributions_type_list_view" model="ir.ui.view">
        <field name="name">contributions.type.list</field>
        <field name="model">contributions.manager.contribution.type</field>
        <field name="arch" type="xml">
            <list string="Tipos de Contribuciones">
                <field name="contribution_name"/>
                <field name="saving_account"/>
                <field name="interest_payment_account"/>
                <field name="interest_rate_display"/>
                <field name="calculation_method"/>
            </list>
        </field>
    </record>

    <record id="contributions_type_form_view" model="ir.ui.view">
        <field name="name">contributions.type.form</field>
        <field name="model">contributions.manager.contribution.type</field>
        <field name="arch" type="xml">
            <form string="Tipo de Contribución">
                <sheet>
                    <div class="oe_title">
                        <label for="contribution_name" class="oe_edit_only"/>
                        <h1>
                            <field name="contribution_name" required="1"/>
                        </h1>
                    </div>

                    <group string="Información General" col="2">
                        <field name="description"/>
                        <field name="allow_withdrawal"/>
                        <field name="calculation_method"/>
                        <field name="days_per_year"/>
                        <field name="capitalization_date"/>
                    </group>
                    <notebook>
                        <page string="Interés">
                            <group string="Tasa de Interés y Cuentas Asociadas" col="2">
                                <field name="interest_rate"/>
                                <field name="interest_payment_account"/>
                            </group>
                        </page>
                        <page string="Contabilidad">
                            <group string="Cuentas Contables de Ahorro" col="2">
                                <field name="saving_account"/>
                                <field name="deposit_bank_account"/>
                            </group>
                            <group string="Diarios Contables" col="2">
                                <field name="journal"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="contributions_type_action" model="ir.actions.act_window">
        <field name="name">Tipos de Contribuciones</field>
        <field name="res_model">contributions.manager.contribution.type</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="contributions_type_list_view"/>
        <field name="domain">[('company_id', 'in', allowed_company_ids)]</field>
    </record>
</odoo>