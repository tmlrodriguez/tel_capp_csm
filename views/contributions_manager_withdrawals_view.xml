<odoo>
    <record id="view_withdrawal_tree" model="ir.ui.view">
        <field name="name">contributions.manager.withdrawal.tree</field>
        <field name="model">contributions.manager.withdrawal</field>
        <field name="arch" type="xml">
            <list string="Retiros" create="true">
                <field name="reference"/>
                <field name="partner_id"/>
                <field name="contribution_type_id"/>
                <field name="move_id"/>
                <field name="amount" sum="Total"/>
                <field name="date"/>
                <field name="internal_use"/>
                <field name="withdrawal_status"
                       widget="badge"
                       decoration-primary="withdrawal_status == 'draft'"
                       decoration-info="withdrawal_status == 'confirmed'"
                       decoration-success="withdrawal_status == 'registered'"/>
            </list>
        </field>
    </record>

    <record id="view_withdrawal_form" model="ir.ui.view">
        <field name="name">contributions.manager.withdrawal.form</field>
        <field name="model">contributions.manager.withdrawal</field>
        <field name="arch" type="xml">
            <form string="Registrar Retiro">
                <header>
                    <button name="action_confirm"
                            string="Confirmar"
                            type="object"
                            class="btn-primary"
                            confirm="¿Deseas confirmar este retiro? Una vez confirmada, no podrá modificarse."
                            invisible="withdrawal_status != 'draft'"/>
                    <button name="action_register"
                            string="Contabilizar"
                            type="object"
                            class="btn-primary"
                            confirm="¿Deseas contabilizar este retiro? Esto generará un asiento contable oficial."
                            invisible="withdrawal_status != 'confirmed'"/>
                    <field name="withdrawal_status" widget="statusbar" statusbar_visible="draft,confirmed,registered"/>
                </header>

                <sheet>
                    <group>
                        <field name="reference" readonly="1" />
                        <field name="partner_id"
                               required="1"
                               readonly="create_uid"
                               options="{'no_create': True, 'no_create_edit': True}"/>
                        <field name="contribution_type_id"
                               required="1"
                               readonly="create_uid"
                               domain="[('id', 'in', allowed_contribution_type_ids)]"
                               options="{'no_create': True, 'no_create_edit': True}"/>
                        <field name="amount" readonly="create_uid" required="1"/>
                        <field name="date" readonly="create_uid"/>
                        <field name="move_id" readonly="1"/>
                    </group>

                    <group string="Uso Interno" colspan="2">
                        <field name="internal_use" readonly="create_uid"/>
                        <field name="invoice_id" readonly="create_uid" invisible="not invoice_id"/>
                        <field name="payment_id" readonly="create_uid" invisible="not payment_id"/>
                        <field name="internal_used" readonly="create_uid" invisible="not internal_used"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="action_withdrawal" model="ir.actions.act_window">
        <field name="name">Registro de Retiros</field>
        <field name="res_model">contributions.manager.withdrawal</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Aquí puedes registrar los retiros monetarios de los socios a sus tipos de contribución activos que permiten retiros.
            </p>
        </field>
    </record>
</odoo>