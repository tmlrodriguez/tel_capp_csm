<odoo>
    <record id="view_partner_form_inherit_contributions" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.contributions</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="open_customer_statement"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-book">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value"/>
                        <span class="o_stat_text">Estado de Cuenta</span>
                    </div>
                </button>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Aportaciones y Ahorros">
                    <header>
                        <button name="action_add_contribution"
                                string="Agregar AportaciÃ³n"
                                type="object"
                                class="btn-primary"
                                icon="fa-plus"/>
                    </header>
                    <field name="contribution_ids" nolabel="1" mode="list,form" context="{'active_test': False}">
                        <list string="Aportaciones y Ahorros" create="false">
                            <field name="contribution_type_id"/>
                            <field name="deposit_bank_account" readonly="1"/>
                            <field name="saving_account" readonly="1"/>
                            <field name="interest_payment_account" readonly="1"/>
                            <field name="current_amount" readonly="1" sum="Total"/>
                            <field name="enabled"/>
                        </list>
                        <form string="Detalle de AportaciÃ³n">
                            <group>
                                <field name="contribution_type_id"
                                       required="1"
                                       options="{'no_create': True, 'no_create_edit': True}"
                                       domain="[('id', 'not in', context.get('exclude_contribution_type_ids', []))]"/>
                                <field name="deposit_bank_account" readonly="1"/>
                                <field name="saving_account" readonly="1"/>
                                <field name="interest_payment_account" readonly="1"/>
                                <field name="current_amount" readonly="1"/>
                                <field name="enabled"/>
                                <button name="action_view_contributions"
                                        string="Ver Aportaciones"
                                        type="object"
                                        icon="fa-search-plus"
                                        create="0"
                                        class="btn-secondary"/>
                                <button name="action_view_withdrawals"
                                        string="Ver Retiros"
                                        type="object"
                                        icon="fa-search-plus"
                                        create="0"
                                        class="btn-secondary"/>
                            </group>
                        </form>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>