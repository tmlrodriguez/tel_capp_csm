<odoo>
  <!-- ROOT -->
  <menuitem id="menu_savings_root"
            name="ADDICAPP Ahorros"
            sequence="10"
            web_icon="tel_capp_csm,static/description/icon.png"/>

  <record id="action_savings_placeholder" model="ir.actions.act_window">
    <field name="name">Ahorros</field>
    <field name="res_model">res.partner</field>
    <field name="view_mode">list,form</field>
    <field name="domain">[('id','=',False)]</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        Savings module — placeholder view.
      </p>
      <p>This screen uses Odoo’s built-in Partner list/form as a scaffold.</p>
    </field>
  </record>
  <menuitem id="menu_savings_entry"
            name="Ahorros"
            parent="menu_savings_root"
            action="action_savings_placeholder"
            sequence="11"/>

  <record id="action_contributions_placeholder" model="ir.actions.act_window">
    <field name="name">Contribuciones</field>
    <field name="res_model">res.partner</field>
    <field name="view_mode">list,form</field>
    <field name="domain">[('id','=',False)]</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        Contributions — placeholder view.
      </p>
      <p>Using Odoo’s standard Partner views as a temporary shell.</p>
    </field>
  </record>
  <menuitem id="menu_contributions_entry"
            name="Contribuciones"
            parent="menu_savings_root"
            action="action_contributions_placeholder"
            sequence="12"/>

  <!-- REPORTING (dropdown) -->
  <menuitem id="menu_reporting_root"
            name="Reporteria"
            parent="menu_savings_root"
            sequence="20"/>

  <record id="action_report_overview" model="ir.actions.act_window">
    <field name="name">Ahorros</field>
    <field name="res_model">res.partner</field>
    <field name="view_mode">list,form,graph,pivot</field>
    <field name="domain">[('id','=',False)]</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">Reporting Overview — placeholder.</p>
      <p>Graph and Pivot ready when data/models are wired.</p>
    </field>
  </record>
  <menuitem id="menu_reporting_overview"
            name="Ahorros"
            parent="menu_reporting_root"
            action="action_report_overview"
            sequence="21"/>

  <record id="action_report_balances" model="ir.actions.act_window">
    <field name="name">Contribuciones</field>
    <field name="res_model">res.partner</field>
    <field name="view_mode">list,form,graph,pivot</field>
    <field name="domain">[('id','=',False)]</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">Balances — placeholder.</p>
    </field>
  </record>
  <menuitem id="menu_reporting_balances"
            name="Contribuciones"
            parent="menu_reporting_root"
            action="action_report_balances"
            sequence="22"/>

  <menuitem id="menu_configuration_root"
            name="Configuracion"
            parent="menu_savings_root"
            sequence="30"/>

  <record id="action_config_saving_types" model="ir.actions.act_window">
    <field name="name">Tipos de Ahorro</field>
    <field name="res_model">res.partner</field>
    <field name="view_mode">list,form</field>
    <field name="domain">[('id','=',False)]</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">Saving Types — placeholder.</p>
    </field>
  </record>
  <menuitem id="menu_config_saving_types"
            name="Tipos de Ahorros"
            parent="menu_configuration_root"
            action="action_config_saving_types"
            sequence="31"/>

  <record id="action_config_contrib_rules" model="ir.actions.act_window">
    <field name="name">Tipos de Contribuciones</field>
    <field name="res_model">res.partner</field>
    <field name="view_mode">list,form</field>
    <field name="domain">[('id','=',False)]</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">Contribution Rules — placeholder.</p>
    </field>
  </record>
  <menuitem id="menu_config_contrib_rules"
            name="Tipos de Contribuciones"
            parent="menu_configuration_root"
            action="action_config_contrib_rules"
            sequence="32"/>

</odoo>